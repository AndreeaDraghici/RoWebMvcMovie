@model MvcMovie.Models.MoviesWithReviews

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MovieItem.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].WrittenReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].ReviewDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReviewList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WrittenReview)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewDate)
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview" asp-route-id="@Model.MovieItem.Id" method="POST">
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.ReviewList[0].Name)</label>
                <input id="reviewName" name="reviewName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.ReviewList[0].WrittenReview)</label>
                @Html.TextArea("reviewText", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>